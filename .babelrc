{
  "presets": [
    ["env", {
      "modules": false,
      "targets": {
        "browsers": [
          "> 0.01%",
          "not ie <= 8",
          "Firefox >= 4",
          "Chrome >= 20",
          "Android >= 4",
          "iOS >= 6"
        ]
      }
    }],
    "stage-2"
  ],
  "plugins": ["transform-runtime"],
  "env": {
    "test": {
      "presets": ["env", "stage-2"],
      "plugins": ["istanbul"]
    }
  }
}
